<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lavender"
    tools:context=".Activities.DetailsTripActivity">

    <ImageView
        android:id="@+id/imageViewArcDeco1"
        android:layout_width="70dp"
        android:layout_height="77dp"
        android:contentDescription="@string/arcimg"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle"
        app:srcCompat="@drawable/arc_3" />

    <ImageView
        android:id="@+id/imageViewArcDeco2"
        android:layout_width="70dp"
        android:layout_height="77dp"
        android:contentDescription="@string/arcimg"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.969"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle"
        app:srcCompat="@drawable/arc_3" />

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/details_adventure"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/imageView6"
        app:layout_constraintEnd_toStartOf="@+id/imageViewArcDeco2"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toEndOf="@+id/imageViewArcDeco1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_marginTop="60dp"
        android:contentDescription="@string/arcimg"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arc_3" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/arcimg"
        android:rotation="180"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/arc_3" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/arc_3"
        android:contentDescription="@string/arcimg" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:rotation="180"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/arc_3"
        android:contentDescription="@string/arcimg" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/light_lavender"
        android:contentDescription="@android:string/ok"
        app:layout_constraintBottom_toTopOf="@+id/imageView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- TextView 1 -->
                <TextView
                    android:id="@+id/textViewDisplayTT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:padding="5dp"
                    android:text="@string/TextViewTitleTrip"
                    android:textAlignment="textStart"
                    android:textColor="#5d5a63"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:maxWidth="120dp"
                    />

                <!-- TextView 2 -->
                <TextView
                    android:id="@+id/textViewTitleTrip"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/Dark_blue_gray"
                    android:padding="5dp"
                    android:textAlignment="textStart"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- TextView 1 -->
                <TextView
                    android:id="@+id/textViewDisplayCountry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:padding="5dp"
                    android:text="@string/country_name"
                    android:textAlignment="textStart"
                    android:textColor="#5d5a63"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:minWidth="120dp"
                    android:maxWidth="120dp"/>

                <!-- TextView 2 -->
                <TextView
                    android:id="@+id/textViewCountryName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/Dark_blue_gray"
                    android:padding="5dp"
                    android:textAlignment="textStart"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- TextView 1 -->
                <TextView
                    android:id="@+id/textViewDisplayCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:padding="5dp"
                    android:text="@string/city_name"
                    android:textAlignment="textStart"
                    android:textColor="#5d5a63"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:maxWidth="120dp"
                    android:minWidth="120dp"/>

                <!-- TextView 2 -->
                <TextView
                    android:id="@+id/textViewCityName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/Dark_blue_gray"
                    android:padding="5dp"
                    android:textAlignment="textStart"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- TextView 1 -->
                <TextView
                    android:id="@+id/textViewDisplayDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:padding="5dp"
                    android:text="@string/travel_start_date"
                    android:textAlignment="textStart"
                    android:textColor="#5d5a63"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:maxWidth="120dp"/>

                <!-- TextView 2 -->
                <TextView
                    android:id="@+id/textViewDate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/Dark_blue_gray"
                    android:padding="5dp"
                    android:textAlignment="textStart"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- TextView 1 -->
                <TextView
                    android:id="@+id/textViewDisplayEBudget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:padding="5dp"
                    android:text="@string/etimated_budget"
                    android:textAlignment="textStart"
                    android:textColor="#5d5a63"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:maxWidth="120dp"/>

                <!-- TextView 2 -->
                <TextView
                    android:id="@+id/textViewEstimatedBudget"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/Dark_blue_gray"
                    android:padding="5dp"
                    android:textAlignment="textStart"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- TextView 1 -->
                <TextView
                    android:id="@+id/textViewDisplayRBudget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:padding="5dp"
                    android:text="@string/budget_spent"
                    android:textAlignment="textStart"
                    android:textColor="#5d5a63"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:maxWidth="120dp"
                    android:minWidth="120dp"/>

                <!-- TextView 2 -->
                <TextView
                    android:id="@+id/textViewSpentBudget"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/Dark_blue_gray"
                    android:visibility="visible"
                    android:padding="5dp"
                    android:textAlignment="textStart"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- TextView 1 -->
                <TextView
                    android:id="@+id/textViewDisplayRAmbiance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:padding="5dp"
                    android:text="@string/note_the_ambiance"
                    android:textAlignment="textStart"
                    android:textColor="#5d5a63"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:maxWidth="120dp"/>

                <!-- TextView 2 -->
                <TextView
                    android:id="@+id/textViewNoteAmbiance"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/Dark_blue_gray"
                    android:padding="5dp"
                    android:textAlignment="textStart"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- TextView 1 -->
                <TextView
                    android:id="@+id/textViewDisplayRHumans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:padding="5dp"
                    android:text="@string/note_the_quality_of_human_interactions"
                    android:textAlignment="textStart"
                    android:textColor="#5d5a63"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:maxWidth="120dp"/>

                <!-- TextView 2 -->

                <TextView
                    android:id="@+id/textViewNoteHumansInteraction"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/Dark_blue_gray"
                    android:padding="5dp"
                    android:textAlignment="textStart"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- TextView 1 -->
                <TextView
                    android:id="@+id/textViewDisplayRNatural"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:padding="5dp"
                    android:text="@string/note_the_natural_beauty"
                    android:textAlignment="textStart"
                    android:textColor="#5d5a63"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:maxWidth="120dp"/>

                <!-- TextView 2 -->
                <TextView
                    android:id="@+id/textViewNoteNaturalBeauty"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/Dark_blue_gray"
                    android:padding="5dp"
                    android:textAlignment="textStart"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- TextView 1 -->
                <TextView
                    android:id="@+id/textViewDisplayRSafety"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:padding="5dp"
                    android:text="@string/note_the_safety_level"
                    android:textAlignment="textStart"
                    android:textColor="#5d5a63"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:maxWidth="120dp"/>

                <!-- TextView 2 -->
                <TextView
                    android:id="@+id/textViewNoteSafetyLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/Dark_blue_gray"
                    android:padding="5dp"
                    android:textAlignment="textStart"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- TextView 1 -->
                <TextView
                    android:id="@+id/textViewDisplayRAccodomation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:padding="5dp"
                    android:text="@string/note_the_accommodation"
                    android:textAlignment="textStart"
                    android:textColor="#5d5a63"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:maxWidth="120dp"/>


                <!-- TextView 2 -->
                <TextView
                    android:id="@+id/textViewNoteAccommodation"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/Dark_blue_gray"
                    android:textAlignment="textStart"
                    android:padding="5dp"/>

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/Stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textViewDisplayMood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/travel_mood"
                    android:textAlignment="center"
                    android:textColor="#5d5a63"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/divider2" />

                <View
                    android:id="@+id/divider2"
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:background="?android:attr/listDivider"
                    android:backgroundTint="@color/violet"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textViewTravelMood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/Dark_blue_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewDisplayMood" />

                <TextView
                    android:id="@+id/textViewDisplayAdventureIndex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@string/adventure_index"
                    android:textAlignment="center"
                    android:textColor="#5d5a63"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.06"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewTravelMood" />

                <TextView
                    android:id="@+id/textViewAdventureIndex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:textColor="@color/Dark_blue_gray"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.243"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewDisplayAdventureIndex" />

                <TextView
                    android:id="@+id/textViewDisplayGlobalIndex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/average_total_score"
                    android:textAlignment="center"
                    android:textColor="#5d5a63"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.888"
                    app:layout_constraintStart_toEndOf="@+id/textViewDisplayAdventureIndex"
                    app:layout_constraintTop_toTopOf="@+id/textViewDisplayAdventureIndex" />

                <TextView
                    android:id="@+id/textViewGlobalIndex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/Dark_blue_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.771"
                    app:layout_constraintStart_toEndOf="@+id/textViewAdventureIndex"
                    app:layout_constraintTop_toBottomOf="@+id/textViewDisplayGlobalIndex" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>


    </ScrollView>

    <Button
        android:id="@+id/buttonPrevious"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/violet"
        android:text="@string/previous"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.297"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.466" />

    <Button
        android:id="@+id/buttonShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/share"
        android:backgroundTint="@color/violet"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.285"
        app:layout_constraintStart_toEndOf="@+id/buttonPrevious"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.466" />



</androidx.constraintlayout.widget.ConstraintLayout>